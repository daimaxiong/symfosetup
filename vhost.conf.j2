<VirtualHost *:80>
    ServerName {{ vhost.server_name }}
    ServerAdmin {{ vhost.server_admin }}

    DocumentRoot {{ apache.document_root_base_dir }}/{{ vhost.document_root }}
    DirectoryIndex /index.php

    <Directory {{ apache.document_root_base_dir }}/{{ vhost.document_root }}>
    AllowOverride None
    Order Allow,Deny
    Allow from All

    FallbackResource /index.php
    </Directory>

    # uncomment the following lines if you install assets as symlinks
    # or run into problems when compiling LESS/Sass/CoffeeScript assets
    # <Directory {{ apache.document_root_base_dir }}/{{ app_name }}>
    #     Options FollowSymlinks
    # </Directory>

    # optionally disable the fallback resource for the asset directories
    # which will allow Apache to return a 404 error when files are
    # not found instead of passing the request to Symfony
    <Directory {{ apache.document_root_base_dir }}/{{ vhost.document_root }}/bundles>
    DirectoryIndex disabled
    FallbackResource disabled
    </Directory>
    LogLevel {{ vhost.log_level }}
    ErrorLog {{ vhost.error_log }}
    CustomLog {{ vhost.access_log }} combined
</VirtualHost>